extends layout

block content
  form(method='post')
    select(name='new_grade')
      option(value='') Grade Level
      option(value='9') 9
      option(value='10') 10
      option(value='11') 11
      option(value='12') 12

    select(name='new_period')
      option(value='') Period
      each val in classPeriods
        option(value='#{val}')=val

    select(name='new_teacher')
      option(value='') Teacher
      each val in teachers
        option(value='#{val}')=val

    select(name='new_class')
      option(value='') Class
      each val in classes
        option(value='#{val}')=val
    input(name='new_first', placeholder='First Name')
    input(name='new_last', placeholder='Last Name')
    input(name='new_username', placeholder='New Username')
    input(name='new_password', placeholder='New Password', type='password')
    input(type='submit')
