doctype html
html
  head
    title= 'AP Grader'
    meta(http-equiv='Content-Type' content='text/html; charset=utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge,chrome=1')
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/nav.css')
    link(rel='stylesheet', href='/stylesheets/table.css')
  body
    if name
      div(id='logged-in') Logged in as: #{name}
    block name
    h1= 'AP Grader'
    div(id='cssmenu')
      ul
        li(class='' id='forl')
          a(href='/') Home
        if !admin
          li(class='')
            a(href='/upload') Upload
        if !admin
          li(class='')
            a(href='/submissions') Submissions
        if admin
          li(class='has-sub')
            a(href='#') Admin
            ul
              li
                a(href='/announcements') Announcements
              li
                a(href='/create-lab') Create Lab
              li
                a(href='/query-users') View All Students
              li
                a(href='/reset-passwords') Reset Passwords
        li(class='has-sub last' class='last' id='forl')
          a(href='#') Account
          ul
            li
              a(href='/login' class='right') Log In
            li()
              a(href='/logout' class='right') Log Out
            li
              a(href='reset-passwords' class='right') Set Password
            li(class='last')
              a(href='create-new-user' class='right') Sign Up
    block content
    
    //
        a(href='/') /
        br
        a(href='/login') Login
        br
        a(href='/create-new-user') CreateNewUser
        br
        a(href='/list-users') ListUsers
        br
        a(href='/upload') upload
        br
        a(href='/new-students') NewStudents
        br
        a(href='/create-lab') CreateLab
        br
        a(href='/initialize') Initialize
        br
        block content
